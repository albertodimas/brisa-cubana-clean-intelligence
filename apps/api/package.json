{
  "name": "@brisa/api",
  "version": "0.4.2",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=22.13.0 <23"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch --env-file-if-exists=.env.local --env-file-if-exists=.env src/server.ts",
    "build": "prisma generate && tsc --project tsconfig.json",
    "postbuild": "pnpm run vercel:deps",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "test:unit:watch": "vitest watch --config vitest.unit.config.ts",
    "test:integration:watch": "vitest watch --config vitest.integration.config.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.operativo.ts && tsx prisma/seed.demo.ts && tsx prisma/seed.marketing.ts",
    "db:seed:operativo": "tsx prisma/seed.operativo.ts",
    "db:seed:demo": "tsx prisma/seed.demo.ts",
    "db:seed:marketing": "tsx prisma/seed.marketing.ts",
    "vercel:deps": "node ./scripts/prepare-vercel-deps.mjs"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@prisma/client": "6.19.0",
    "@scalar/hono-api-reference": "^0.9.24",
    "@sentry/node": "^10.24.0",
    "@sentry/profiling-node": "^10.24.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "hono": "4.10.4",
    "hono-rate-limiter": "0.4.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "stripe": "^19.3.0",
    "twilio": "^5.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "dotenv": "^17.2.3",
    "openapi-response-validator": "^12.1.3",
    "prisma": "6.19.0",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.10",
      "tmp": "^0.2.4",
      "vite": "7.1.11",
      "import-in-the-middle": "1.15.0",
      "require-in-the-middle": "7.5.2"
    }
  }
}
