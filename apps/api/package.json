{
  "name": "@brisa/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npx tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "dev:bun": "bun run src/server.ts",
    "build": "prisma generate && tsup",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d && sleep 3",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test:integration": "pnpm test:db:up && vitest --config vitest.integration.config.ts; pnpm test:db:down",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --watch",
    "test:all": "vitest && pnpm test:integration",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "payments:reconcile": "tsx scripts/reconcile-payments.ts"
  },
  "dependencies": {
    "@hono/node-server": "1.19.5",
    "@hono/otel": "^0.5.0",
    "@hono/prometheus": "^1.0.2",
    "@opentelemetry/auto-instrumentations-node": "^0.64.6",
    "@opentelemetry/exporter-prometheus": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "^6.16.3",
    "@sentry/node": "10.17.0",
    "bcryptjs": "^2.4.3",
    "dompurify": "^3.2.7",
    "helmet": "^8.1.0",
    "hono": "4.9.9",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.13.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.23.0",
    "resend": "^6.1.2",
    "stripe": "^17.6.0",
    "tsx": "4.20.6",
    "twilio": "^5.10.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "prisma": "^6.16.3",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
