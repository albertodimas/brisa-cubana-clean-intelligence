{
  "name": "brisa-cubana-clean-intelligence",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "test:e2e:smoke": "LOGIN_RATE_LIMIT=20 playwright test --project=smoke",
    "test:e2e:critical": "LOGIN_RATE_LIMIT=20 playwright test --project=critical",
    "test:e2e:full": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter @brisa/api db:push",
    "db:migrate": "pnpm --filter @brisa/api db:migrate",
    "db:seed": "pnpm --filter @brisa/api db:seed",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "rm -rf node_modules .turbo",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.48.2",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.11.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "turbo": "^2.5.8",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.10"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/nextjs": "^10.18.0"
  }
}
