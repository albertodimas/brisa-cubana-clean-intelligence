{
  "name": "brisa-cubana-clean-intelligence",
  "version": "0.4.2",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=22.13.0 <23",
    "pnpm": ">=10.18.0 <11"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "test:e2e:smoke": "LOGIN_RATE_LIMIT=20 playwright test --project=smoke",
    "test:e2e:critical": "E2E_LOGIN_RATE_LIMIT=50 LOGIN_RATE_LIMIT=20 playwright test --project=critical",
    "test:e2e:full": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter @brisa/api db:push",
    "db:migrate": "pnpm --filter @brisa/api db:migrate",
    "db:seed": "pnpm --filter @brisa/api db:seed",
    "analyze:web": "pnpm --filter @brisa/web analyze",
    "verify:versions": "node scripts/verify-versions.mjs",
    "docs:verify": "pnpm verify:versions && bash scripts/verify-doc-structure.sh",
    "posthog:monitor": "node scripts/posthog-checkout-monitor.mjs",
    "posthog:sync-dashboard": "node scripts/posthog-sync-dashboard.mjs",
    "capture:hero": "node scripts/capture-landing-hero.mjs",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "rm -rf node_modules .turbo",
    "clean:workspace": "bash scripts/cleanup-local-env.sh",
    "monitor:market-stats": "node scripts/check-market-stats-staleness.mjs --json tmp/market-stats-report.json --markdown tmp/market-stats-report.md",
    "prepare": "husky",
    "stripe:listen": "stripe listen --forward-to http://localhost:3001/api/payments/stripe/webhook",
    "posthog:test-event": "node scripts/posthog-send-test-event.mjs",
    "sentry:test-event": "bash scripts/sentry-send-test-event.sh",
    "env:status": "node scripts/env/sync.mjs",
    "status:update": "node scripts/status/generate.mjs",
    "storybook": "pnpm --filter @brisa/web storybook",
    "storybook:build": "pnpm --filter @brisa/web storybook:build"
  },
  "devDependencies": {
    "@cspell/dict-es-es": "^3.0.8",
    "@eslint/js": "^9.38.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.10",
      "tmp": "^0.2.4",
      "vite": "7.1.11"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@sentry-internal/node-cpu-profiler",
      "@sentry/cli",
      "@vercel/speed-insights",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.22.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1"
  }
}
