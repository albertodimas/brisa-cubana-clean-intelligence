{
  "name": "brisa-cubana-clean-intelligence",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=22.0.0 <23",
    "pnpm": ">=10.18.0 <11"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "test:e2e:smoke": "LOGIN_RATE_LIMIT=20 playwright test --project=smoke",
    "test:e2e:critical": "LOGIN_RATE_LIMIT=20 playwright test --project=critical",
    "test:e2e:full": "LOGIN_RATE_LIMIT=20 playwright test --project=full",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter @brisa/api db:push",
    "db:migrate": "pnpm --filter @brisa/api db:migrate",
    "db:seed": "pnpm --filter @brisa/api db:seed",
    "verify:versions": "node scripts/verify-versions.mjs",
    "docs:verify": "pnpm verify:versions && bash scripts/verify-doc-structure.sh",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "rm -rf node_modules .turbo",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cspell/dict-es-es": "^3.0.8",
    "@eslint/js": "^9.37.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.10"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/nextjs": "^10.19.0"
  }
}
