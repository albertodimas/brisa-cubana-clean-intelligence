{
  "name": "brisa-cubana-clean-intelligence",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter @brisa/api db:push",
    "db:migrate": "pnpm --filter @brisa/api db:migrate",
    "db:seed": "pnpm --filter @brisa/api db:seed",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.48.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.11.1",
    "globals": "^16.4.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.4.2",
    "turbo": "^2.5.8",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.10"
    }
  }
}
