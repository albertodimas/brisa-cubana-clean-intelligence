{
  "name": "brisa-cubana-clean-intelligence",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "node scripts/turbo.js run dev",
    "dev:web": "node scripts/turbo.js run dev --filter=web",
    "dev:api": "node scripts/turbo.js run dev --filter=@brisa/api",
    "build": "node scripts/turbo.js run build",
    "lint": "node scripts/turbo.js run lint && pnpm lint:md && pnpm lint:spelling",
    "lint:md": "markdownlint \"**/*.md\" --ignore site --ignore .venv --ignore node_modules --ignore _archived --config .markdownlint.json",
    "lint:spelling": "cspell lint \"**/*.md\" --config .cspell.json",
    "test": "node scripts/turbo.js run test",
    "test:coverage": "pnpm --filter=@brisa/api test -- --coverage",
    "typecheck": "node scripts/turbo.js run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "db:setup": "pnpm --filter=@brisa/api db:push && pnpm --filter=@brisa/api db:seed",
    "db:reset": "pnpm --filter=@brisa/api db:push --force-reset && pnpm --filter=@brisa/api db:seed",
    "db:studio": "pnpm --filter=@brisa/api db:studio",
    "setup": "pnpm install && pnpm docker:up && sleep 3 && pnpm db:setup",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .turbo && rm -rf node_modules",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:typedoc": "typedoc --options typedoc.json",
    "docs:storybook": "pnpm --filter=@brisa/ui storybook:build",
    "docs:diagrams": "node scripts/generate_diagrams.mjs",
    "docs:build:artifacts": "pnpm docs:typedoc && pnpm docs:storybook",
    "stripe:listen": "./scripts/stripe_listen.sh",
    "stripe:trigger": "./scripts/stripe_trigger.sh",
    "prepare": "husky",
    "test:e2e": "DYLD_USE_FAKE_API_DATA=1 USE_FAKE_API_DATA=1 NEXT_PUBLIC_USE_FAKE_API_DATA=1 pnpm --filter=web build && PLAYWRIGHT_HTML_REPORT=./.playwright-report DYLD_USE_FAKE_API_DATA=1 USE_FAKE_API_DATA=1 NEXT_PUBLIC_USE_FAKE_API_DATA=1 pnpm exec playwright test",
    "pre-push": "./scripts/pre-push-check.sh",
    "verify": "./scripts/pre-push-check.sh"
  },
  "devDependencies": {
    "@cspell/dict-es-es": "3.0.8",
    "@eslint/js": "9.36.0",
    "@mermaid-js/mermaid-cli": "11.12.0",
    "@playwright/test": "1.55.1",
    "@types/node": "24.6.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "cspell": "9.2.1",
    "eslint": "9.36.0",
    "execa": "9.3.1",
    "globby": "14.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "turbo": "2.5.8",
    "typedoc": "0.28.13",
    "typescript": "5.9.2"
  }
}
