{
  "environments": ["development", "preview", "production"],
  "variables": [
    {
      "key": "DATABASE_URL",
      "description": "Cadena de conexión principal (Neon / Postgres local).",
      "required": true,
      "scopes": ["api", "jobs"]
    },
    {
      "key": "DATABASE_URL_UNPOOLED",
      "description": "Conexion directa sin pool (Prisma directUrl).",
      "required": true,
      "scopes": ["api", "jobs"]
    },
    {
      "key": "NEXTAUTH_URL",
      "description": "URL base utilizada por Auth.js para callbacks.",
      "required": true,
      "scopes": ["web"]
    },
    {
      "key": "NEXT_PUBLIC_SITE_URL",
      "description": "Dominio público del sitio (usado en metadatos y enlaces).",
      "required": true,
      "scopes": ["web"]
    },
    {
      "key": "HEALTH_CHECK_TOKEN",
      "description": "Token opcional para proteger /healthz.",
      "required": false,
      "scopes": ["api", "web"]
    },
    {
      "key": "SENTRY_DSN",
      "description": "DSN de Sentry para reportes de errores.",
      "required": false,
      "scopes": ["api", "web"]
    },
    {
      "key": "SENTRY_REPLAY_ENABLED",
      "description": "Activa Sentry Replay en runtimes server/edge (usar sólo en campañas).",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "SENTRY_REPLAYS_SESSION_SAMPLE_RATE",
      "description": "Porcentaje de sesiones capturadas por Replay (0-1).",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE",
      "description": "Porcentaje de sesiones capturadas tras un error (0-1).",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "NEXT_PUBLIC_SENTRY_REPLAY_ENABLED",
      "description": "Habilita Replay en el cliente; dejar en false salvo estudios controlados.",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE",
      "description": "Muestreo de sesiones Replay en cliente (0-1).",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE",
      "description": "Muestreo de Replay tras errores en cliente.",
      "required": false,
      "scopes": ["web"]
    },
    {
      "key": "STRIPE_WEBHOOK_SECRET",
      "description": "Secreto usado por la API para validar webhooks de Stripe.",
      "required": false,
      "scopes": ["api"]
    }
  ]
}
