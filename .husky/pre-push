#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run linting
echo "📝 Linting..."
pnpm lint || {
  echo "❌ Linting failed. Please fix errors before pushing."
  exit 1
}

# Run type checking
echo "🔍 Type checking..."
pnpm typecheck || {
  echo "❌ Type check failed. Please fix type errors before pushing."
  exit 1
}

# Run tests (vitest run mode is handled by workspace configs)
echo "🧪 Running tests..."
pnpm test || {
  echo "❌ Tests failed. Please fix failing tests before pushing."
  exit 1
}

echo "✅ All pre-push checks passed!"
